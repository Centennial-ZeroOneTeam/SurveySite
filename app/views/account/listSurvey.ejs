<div class="container pt-5">
    <h1><%= title %></h1>
    <div class="text-end mb-3"><a href="/account/addSurvey" class="btn btn-primary"><i class="fas fa-plus-circle"></i>
            Create New Survey</a></div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <td>My Surveys</td>
                <td colspan="3" class="text-center">Action</td>
            </tr>
            </thead>
            <tbody>
            <% if (surveyList.length > 0) { %>
                <% for(let count = 0; count < surveyList.length; count++) { %>
                    <tr>
                        <td><%= surveyList[count].title %></td>
                        <td class="text-center" width="100"><a href="/account/viewSurvey/<%= surveyList[count].title %>"
                                                               class="btn btn-outline-info btn-sm"><i
                                        class="bi bi-clipboard-data"></i> View</a></td>
                        <td class="text-center" width="100"><a href="/account/editSurvey/<%= surveyList[count].title %>"
                                                               class="btn btn-outline-primary btn-sm"><i
                                        class="bi bi-pencil-square"></i> Edit</a></td>
                        <td class="text-center" width="100"><a
                                    href="/account/deleteSurvey/<%= surveyList[count].title %>"
                                    class="btn btn-outline-danger btn-sm"><i class="bi bi-trash3"></i> Delete</a></td>
                    </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td class="text-center" colspan="4">No Survey Currently</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
