<%- include app/views/partials/header.ejs %>

<%- include app/views/partials/main_nav.ejs %>


<!-- Main Content -->
<main class="container">
    <div class="row">
        <div class="offset-md-0 col-md-11">
            <h1><%= title %></h1>

            <a href="/survey/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Survey</a>
            <br>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">

                    <th class="text-center col-10">Title</th>
                    <th class="text-center col-1">Result</th>
                    <th class="text-center col-1">Edit</th>
                    <th class="text-center col-1">Delete</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < surveyList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-10"><%= surveyList[count].title %></td>
                        <td class="text-center col-1">
                            <a href="/survey/result/<%= surveyList[count]._id %>" class="btn btn-info btn-sm">
                                <i class="fas fa-pencil-alt"></i> Result</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/survey/edit/<%= surveyList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/survey/delete/<%= surveyList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>

<%- include app/views/partials/bottom_nav.ejs %>

<%- include app/views/partials/footer.ejs %>






