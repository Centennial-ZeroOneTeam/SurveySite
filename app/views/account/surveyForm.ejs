<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<!-- Main Content -->
<main class="container pt-5">
    <div class="row">
        <div class="col-12 m-auto">
            <h1 class="mb-3"><%= title %></h1>
            <form method="POST">
                <div class="mb-3 row">
                    <div class="text-end">
                        <a href="/account" class="btn btn-outline-primary">cancel</a>
                        <button class="btn btn-primary">Update</button>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="title" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-6">
                        <input type="text" name="title" id="title" class="form-control" value="">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="startDate" class="col-sm-2 col-form-label">Start Date</label>
                    <div class="col-sm-6 ">
                        <div class="input-group">
                            <input type="date" name="startDate" id="startDate" class="form-control" aria-describedby="basic-addon1">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-calendar-date"></i></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="endDate" class="col-sm-2 col-form-label">End Date</label>
                    <div class="col-sm-6 ">
                        <div class="input-group">
                            <input type="date" name="endDate" id="endDate" class="form-control" aria-describedby="basic-addon2">
                            <span class="input-group-text" id="basic-addon2"><i class="bi bi-calendar-date"></i></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="status" class="col-sm-2 col-form-label">Status</label>
                    <div class="col-sm-6 ">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="status" id="statusPublic" value="1">
                            <label class="form-check-label" for="statusPublic">Public</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="status" id="statusPrivate" value="0" checked>
                            <label class="form-check-label" for="statusPrivate">Private</label>
                        </div>
                    </div>
                </div>




                <br/><br/><br/>


                <h2>Questions</h2>
                <div id="question-list">

                    <% questionCount = 1 %>
                    <div id="question<%= questionCount %>" class="card mb-3">
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="text-end">
                                    <a class="btn btn-outline-danger btn-sm removeQuestion" data-question="question<%= questionCount %>">Remove Question</a>
                                </div>
                                <label class="form-label">Question</label>
                                <input type="text" name="questions[<%= questionCount %>][question]" value="<%= %>" class="form-control mb-3"></input>
                                <input type="hidden" name="questions[<%= questionCount %>][questionType]" value="st">
                                <textarea class="form-control" rows="3" disabled></textarea>
                            </div>
                        </div>
                    </div>

                    <% questionCount = 2 %>
                    <div id="question<%= questionCount %>" class="card mb-3">
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="text-end">
                                    <a class="btn btn-outline-danger btn-sm removeQuestion" data-question="question<%= questionCount %>">Remove Question</a>
                                </div>
                                <label class="form-label">Question</label>
                                <input type="text" name="questions[<%= questionCount %>][question]" value="<%= %>" class="form-control mb-3"></input>
                                <input type="hidden" name="questions[<%= questionCount %>][questionType]" value="mc">
                                <div class="form-label">Answer</div>
                                <div class="answer-list">
                                    <% for(let count = 0; count < 4; count++) { %>
                                    <div class="answer d-flex align-items-center mb-3">
                                        <input class="form-check-input" type="radio" disabled>
                                        <input type="text" name="questions[<%= questionCount %>][answers]" class="form-control ms-2" value=""/>
                                        <a class="btn btn-danger btn-sm ms-2 removeMcAnswer">Remove</a>
                                    </div>
                                    <% } %>
                                </div>
                                <div class="text-center pt-3">
                                    <a class="btn btn-outline-primary addMcAnswer" data-question="question2">Add answer</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- end question list-->

                <div class="text-center">
                    <a class="btn btn-primary addMCQuestion" role="button"><i class="fas fa-plus-circle"></i> Add Multiple chooice question</a>
                    <a class="btn btn-primary addSTQuestion ms-2" role="button"><i class="fas fa-plus-circle"></i> Add Single text question</a>
                </div>
            </form>
            <br/><br/><br/><br/>
        </div>
    </div>
</main>
<script type="text/javascript">
    $( document ).ready(function() {
        var questiont_row = <%= 3 %>;

        // Delete Question
        $('#question-list').on('click', '.removeQuestion',function(){
            var questionID = $(this).data('question');
            $('#'+questionID).remove();
        });

        // Add SingleText Question
        $('.addSTQuestion').on("click", function(){
            html = '<div id="question'+questiont_row+'" class="card mb-3">';
            html += '<div class="card-body">';
            html += '<div class="mb-3">';
            html += '<div class="text-end">';
            html += '<a class="btn btn-outline-danger btn-sm removeQuestion" data-question="question'+questiont_row+'">Remove Question</a>';
            html += '</div>';
            html += '<label class="form-label">Question</label>';
            html += '<input type="text" name="questions['+questiont_row+'][question]" value="" class="form-control mb-3"></input>';
            html += '<input type="hidden" name="questions['+questiont_row+'][questionType]" value="st">';
            html += '<textarea class="form-control" rows="3" disabled></textarea>';
            html += '</div>';
            html += '</div>';
            html += '</div>';

            questiont_row++;

            $('#question-list').append(html);
        })

        // Add MC Question
        $('.addMCQuestion').on("click", function(){
            html = '<div id="question'+questiont_row+'" class="card mb-3">';
            html += '<div class="card-body">';
            html += '<div class="mb-3">';
            html += '<div class="text-end">';
            html += '<a class="btn btn-outline-danger btn-sm removeQuestion" data-question="question'+questiont_row+'">Remove Question</a>';
            html += '</div>';
            html += '<label class="form-label">Question</label>';
            html += '<input type="text" name="questions['+questiont_row+'][question]" value="" class="form-control mb-3"></input>';
            html += '<input type="hidden" name="questions['+questiont_row+'][questionType]" value="mc">';
            html += '<div class="form-label">Answer</div>';
            html += '<div class="answer-list">';
            html += '<div class="answer d-flex align-items-center mb-3">';
            html += '<input class="form-check-input" type="radio" disabled>';
            html += '<input type="text" name="questions['+questiont_row+'][answers]" class="form-control ms-2" value=""/>';
            html += '<a class="btn btn-danger btn-sm ms-2 removeMcAnswer">Remove</a>';
            html += '</div>';
            html += '</div>';
            html += '<div class="text-center pt-3">';
            html += '<a class="btn btn-outline-primary addMcAnswer" data-question="question2">Add answer</a>';
            html += '</div>';
            html += '</div>';
            html += '</div>';

            questiont_row++;

            $('#question-list').append(html);
        })



        $('#question-list').on('click', '.addMcAnswer',function(){
            var questionID = $(this).data('question');
            var numAnswers = $('#'+questionID).children('.answer').length;

            html = '';
            html += '<div class="answer d-flex align-items-center mb-3">';
            html += '<input class="form-check-input" type="radio" disabled>';
            html += '<input type="text" name="questions['+questiont_row+'][answers]" class="form-control ms-2" value=""/>';
            html += '<a class="btn btn-danger btn-sm ms-2 removeMcAnswer">Remove</a>';
            html += '</div>';
            
            $('.answer-list').append(html);
        });
    
        $('#question-list').on('click', '.removeMcAnswer',function(){
            $(this).parent('.d-flex').remove();
        });
    });
    </script>

