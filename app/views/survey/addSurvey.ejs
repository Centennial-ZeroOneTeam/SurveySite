<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>


            <form class="form-group" method="POST">

                <div class="mb-3 row">
                    <label for="title" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-6">
                        <input type="text"
                               class="form-control"
                               placeholder="Enter the Title"
                               id="title" class="form-control"
                               name="title"
                                required>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="startDate" class="col-sm-2 col-form-label">Start Date</label>
                    <div class="col-sm-6 ">
                        <div class="input-group">
                            <input type="date" name="startDate" id="startDate" class="form-control"
                                   aria-describedby="basic-addon1">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-calendar-date"></i></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="endDate" class="col-sm-2 col-form-label">End Date</label>
                    <div class="col-sm-6 ">
                        <div class="input-group">
                            <input type="date" name="endDate" id="endDate" class="form-control"
                                   aria-describedby="basic-addon2">
                            <span class="input-group-text" id="basic-addon2"><i class="bi bi-calendar-date"></i></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="status" class="col-sm-2 col-form-label">Status</label>
                    <div class="col-sm-6 ">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="status" id="statusPublic" value="1">
                            <label class="form-check-label" for="statusPublic">Public</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="status" id="statusPrivate" value="0"
                                   checked>
                            <label class="form-check-label" for="statusPrivate">Private</label>
                        </div>
                    </div>
                </div>


                <br>
                <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i> Submit</button>
                <a href="/survey" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>


                <br/><br/><br/>
                <h2>Questions</h2>
                <div class="d-flex">
                    <a href="/survey/mcQuestion" class="btn btn-outline-primary ms-auto" role="button"><i
                                class="fas fa-plus-circle"></i> Add Multiple chooice question</a>
                    <a href="/survey/singleTextQuestion" class="btn btn-outline-primary ms-2" role="button"><i
                                class="fas fa-plus-circle"></i> Add Single text question</a>
                    <a href="/survey/add" class="btn btn-primary ms-2" role="button"><i class="fas fa-plus-circle"></i>
                        Add question</a>
                </div>
                <div class="d-flex pt-5">
                    <a href="/survey/mcQuestion/123demo" class="btn btn-outline-default ms-auto" role="button"><i
                                class="fas fa-plus-circle"></i> Demo edit Multiple chooice question</a>
                    <a href="/survey/singleTextQuestion/123demo" class="btn btn-outline-default ms-2" role="button"><i
                                class="fas fa-plus-circle"></i> Demo edit Add Single text question</a>
                </div>


            </form>


        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>